<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/activity_main_toolbar"
    android:background="@color/colorPrimary"
    app:popupTheme="@style/AppTheme">

    <RelativeLayout
        android:id="@+id/activity_main_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebutton_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_views_default_margin"
            android:layout_marginBottom="@dimen/toolbar_views_default_margin"
            android:layout_marginLeft="@dimen/toolbar_views_margin_10dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/back_button"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/toolbar_app_name_text_size"
            android:text="@string/deputy"
            android:layout_marginTop="@dimen/toolbar_views_default_margin"
            android:layout_marginBottom="@dimen/toolbar_views_default_margin"
            android:layout_marginRight="@dimen/toolbar_views_margin_10dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/imageview_app_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/deputy_logo"
            android:layout_marginTop="@dimen/toolbar_views_default_margin"
            android:layout_marginBottom="@dimen/toolbar_views_default_margin"
            android:layout_marginLeft="@dimen/toolbar_views_margin_10dp"
            android:layout_marginRight="@dimen/toolbar_views_margin_10dp"
            android:contentDescription="@string/shift_photo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/imagebutton_list_or_map_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_views_default_margin"
            android:layout_marginBottom="@dimen/toolbar_views_default_margin"
            android:layout_marginRight="@dimen/toolbar_views_margin_10dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/map"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/list_or_map_view" />

    </RelativeLayout>
</android.support.v7.widget.Toolbar>